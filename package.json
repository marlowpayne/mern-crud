{
  "name": "mern-crud",
  "version": "0.0.1",
  "description": "A basic CRUD app on the MERN stack",
  "main": "server.js",
  "scripts": {
    "dev": "npm run start",
    "installAll": "npm install && npm install --prefix client",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "lint": "prettier --check **/*.{js,json,md}",
    "prettier": "prettier --write **/*.{js,json,md}",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marlowpayne/mern-crud.git"
  },
  "author": "Marlow Payne",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marlowpayne/mern-crud/issues"
  },
  "homepage": "https://github.com/marlowpayne/mern-crud#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.7",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "husky": "^3.0.9",
    "lint-staged": "^9.4.3",
    "nodemon": "^1.19.4",
    "prettier": "1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
